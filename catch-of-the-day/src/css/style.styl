body 
	background-color white

.order-enter
	background-color red
	transition all 0.5s
	transform translateX(-120%)
	max-height 0
	padding 0
	&.order-enter-active
		background-color yellow
		max-height 60px
		padding 10px 0
		transform translateX(0)

.order-leave
	transition all 0.5s
	transform translateX(0)
	&.order-leave-active
		transform translateX(120%)
		max-height 0
		padding 0

.count
	position relative
	overflow hidden

.count-enter
	transition all 10s
	transform translateY(100%) // start it off screen
	&.count-enter-active
		transform translateY(0) // normal resting spot

.count-leave
	transition all 10s
	position absolute
	left 0
	bottom 0
	transform translateY(0) // start it where it is
	&.count-leave-active
		transform translateY(100%) // transform off screen